%section.container
  - if @article.persisted?
    = render 'edit_first'

  %h2.text-center All articles

  %table.table.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Expired_at
        %th Created_at
        %th Updated_at
        %th Actions

    %tbody
      - if @articles.present?
        = render @articles
      - else
        %tr
          %td{colspan: 6}
            %p Авторских новостей пока нет.
      %tr
        %td{colspan: 6}
          = link_to 'New', new_admin_article_path, class: 'btn btn btn-success'
